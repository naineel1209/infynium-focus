{
    "manifest_version": 3,
    "name": "Infynium Focus",
    "version": "1.0",
    "description": "A fully customizable, feature-rich, and completely free 2-in-1 Pomodoro timer and website blockerâ€”designed to empower you to focus deeply and accomplish what truly matters.",
    "permissions": [
        "storage",
        "tabs",
        "browsingData",
        "webRequest",
        "notifications",
        "alarms"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
}
